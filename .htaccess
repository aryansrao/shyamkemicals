Options -MultiViews
RewriteEngine On
RewriteBase /

# First, try to serve the requested file directly if it exists
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Then handle specific routes
RewriteRule ^mission$ mission.html [L]

# Handle other html files without extension
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+?)/?$ $1.html [L]

# Redirect explicit .html requests to clean URLs
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# Redirect /index.html to /
RewriteRule ^index\.html$ / [R=301,L]

# Custom error page
ErrorDocument 404 /404.html

# Prevent directory listings
Options -Indexes
